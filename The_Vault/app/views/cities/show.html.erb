<div class = "content city-bg-<%= @city.id %>">
	
	<div class = "col-xs-6 col-xs-offset-3"><br>
		<div class="panel panel-default">
		  <div class="panel-heading" id="panel-heading">
		    <h3 class="panel-title"><%= @city.name %> Events</h3>
		  </div>
		<div class="panel-body">
			<ul class="list-group text-left">
			<% @city.events.order(:event_date).each do |event| %>
	    		<li class="list-group-item"><%= link_to event.title, event_path(event) %> -- <%= event.body %></li>
			<%end%>
			</ul>
		</div>
	  </div>

  <div data-no-turbolink>
  	<%= link_to "All Cities", cities_path, class:"btn btn-danger" %> <%= link_to "New Event", new_event_path, class:"btn btn-danger" %>
  </div>
 </div>
</div>