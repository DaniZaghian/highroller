<div class = "content">

	<h1>Update Profile</h1><br>

	<%= form_for @user, :url => user_path, :html => { :multipart => true } do |f| %>
	<div class ="form-group col-xs-2 col-xs-offset-5">
		<span class ="selector-text">First Name:</span> <%= f.text_field :first_name, class: "form-control" %><br>
		<span class ="selector-text">Last Name:</span> <%= f.text_field :last_name, class: "form-control" %><br>
		<span class ="selector-text">Email:</span> <%= f.text_field :email, class: "form-control" %><br>
	  	<span class ="selector-text">Photo:</span> <%= f.file_field :avatar, class: "form-control" %><br>
		<%= f.submit "Update", class: "btn btn-danger" %>
	<% end %>
</div>
