<div class = "content">
	<div class = "col-xs-6 col-xs-offset-3">
		<% @cities.each do |city| %>
		<div class="panel panel-default">
		  <div class="panel-heading" id="panel-heading">
		    <h3 class="panel-title"><%= link_to city.name, city_path(city) %></h3>
		  </div>
		  <div class="panel-body">
		    <ul class="list-group text-left">
			    <% city.events.order(:event_date).each do |event| %>
			    	<li class="list-group-item"><%= link_to event.title, event_path(event) %> -- <%= event.body %></li>
			    <% end %>
			</ul>
		  </div>
		  </div>
		 <% end %>
	</div>
</div>

