<div class = "content container-fluid">
  <h1> Edit Event </h1><br>
  
<% if flash[:error] %>
  <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>

  <%= form_for @event do |f| %>
    <div class ="form-group col-xs-4 col-xs-offset-4">
      <span class = "selector-text">Taking place in: </span> <%= f.select :city_id, [["San Francisco", 1], ["London", 2], ["Moscow", 3], ["Tokyo", 4], ["New York", 5], ["Rio de Janeiro", 6], ["Johannesburg", 7], ["Quebec City", 8], ["Auckland", 9], ["Honolulu", 10], ["Lagos", 11], ["Mexico City", 12], ["Bangkok", 13]], class: "form-control" %><br> <br>
      <div>
        <span class ="selector-text"> Taking place on: </span><%=  f.date_field :event_date %>
      </div><br>
      <div>
        <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
      </div><br>
      <div>
        <%= f.text_area :body, class: "form-control", rows: "8", placeholder: "Describe the event" %>
      </div><br>
		<%= f.submit "Update Event", class: "btn btn-danger" %>
  <% end %>
</div>
